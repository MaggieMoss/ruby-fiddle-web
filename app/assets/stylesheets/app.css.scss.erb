@import url(http://fonts.googleapis.com/css?family=Ubuntu);
@import url(http://fonts.googleapis.com/css?family=PT%20Mono);

$furleyBackground: url("<%= asset_path('furley_bg.png') %>");


body {
  background: $furleyBackground;
  font-family: 'Ubuntu', sans-serif;
  
  .container {
      padding: 0px;
  }

}

.riddle .row .six {
  margin: 0;
  width: 48.323%;
  padding: 12px;
  padding-bottom: 0;
}

.riddle .row .six .div:last-child {
  margin: 0;
  width: 50%;
}

#info-panel {
  background: white;
  height: 100%;
}

.execute {
  position: absolute;
  z-index: 10;
  border: 1px solid black;
  border-radius: 4px;
  right: 0;
}

#riddle_result {
  padding: 11px;
  position: absolute;
  top: 50em;
  right: 49.1em;
  left: 0;
  bottom: 0;

  .panel {
    padding: 20px 0px 2px 20px;
  }
}

.riddle {
  font-family: "Monaco", "Ubuntu", sans-serif;

  textarea, code {
    font-family: "PT Mono", "courier", fixed;
    height: 400px;
  }

.row {
  width: 100%;
  max-width: inherit;
  min-width: inherit;
  margin: 0 auto;
}

  .alert-box {
    font-family: Arial, sans-serif;
  }
}

.button-content {
  input {
    font-size: 13px;
  }
}

#riddle_form{
  textarea {
    background: #111111;
    color: #ffffff;
    border: 2px solid #ccc;
  }

  small {
    margin-top: 1em;
  }

  .code.button {
    background: #112435 url(<%=asset_path("foundation/misc/button-gloss.png") %>) repeat-x 0 -31px;
    border: 0;
  }
}


footer {
  margin-top: 60px;

  .row{
    padding-top: 3em;
    border-top: 1px solid #ccc;
  }
}

.segmented_control {
    padding-top: 3px;
    width: 400px;
    display: inline-block;
    -webkit-box-shadow: 0 1px 0 #fff;
    -moz-box-shadow: 0 1px 0 #fff;
    box-shadow: 0 1px 0 #fff;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    
    button {
        margin: 0;
        padding: 4px 12px;
        border: 1px solid #777;
        text-shadow: 0 1px 0 #fff;
        font-size: 12px;
        background: #eee;
        background: -webkit-gradient(
            linear, left top, left bottom,
            from(#fff), to(#ddd)
        );
        background: -moz-linear-gradient(top, #fff, #ddd);
    }
    
    button.left_section {
        border-right: 0;
        -webkit-border-top-left-radius: 4px;
        -webkit-border-bottom-left-radius: 4px;
        -moz-border-radius: 4px 0 0 4px;
        border-radius: 4px 0 0 4px;
        -webkit-background-clip: padding-box;
    }
    
    button.middle_section {
        margin-left: -8px;
        border-right: 0;
    }
    
    button.right_section {
        margin-left: -8px;
        -webkit-border-top-right-radius: 4px;
        -webkit-border-bottom-right-radius: 4px;
        -moz-border-radius: 0 4px 4px 0;
        border-radius: 0 4px 4px 0;
        -webkit-background-clip: padding-box;
    }
    
    button:active {
        background: #ccc;
        background: -webkit-gradient(
            linear, left top, left bottom,
            from(#ddd), to(#bbb)
        );
        background: -moz-linear-gradient(top, #ddd, #bbb);
        text-shadow: 0 1px 0 #eee;
        -webkit-box-shadow: inset 0 1px 4px #000;
        -moz-box-shadow: inset 0 1px 4px #000;
        box-shadow: inset 0 1px 4px #000;
    }
    
    button::-moz-focus-inner {
        border: 0;
    }
    
    button:focus {     
        outline: none; 
    }
    
    button.selected_binding{
      background: #ccc;
      color: white;
      background: -webkit-gradient(
          linear, left top, left bottom,
          from(#126EE4), to(#4F99FA)
      );
      background: -moz-linear-gradient(top, #126EE4, #4F99FA);
      text-shadow: 0 1px 0 #eee;
      -webkit-box-shadow: inset 0 1px 4px #000;
      -moz-box-shadow: inset 0 1px 4px #000;
      box-shadow: inset 0 1px 4px #000;
    }
}

.has-tip {
  cursor: pointer;
}

